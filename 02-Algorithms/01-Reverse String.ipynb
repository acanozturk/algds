    "def reverse(string):\n",
    "    \n",
    "    length = len(string)\n",
    "    \n",
    "    if length == 0:\n",
    "        \n",
    "        return None\n",
    "    \n",
    "    last_char = string[length - 1]\n",
    "    print(last_char, end = '')\n",
    "    \n",
    "    return reverse(string[0:length - 1])\n",
    "    "
